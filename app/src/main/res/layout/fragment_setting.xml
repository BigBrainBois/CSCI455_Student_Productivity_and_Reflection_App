<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <!--Title-->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="@string/setting"
        android:textAlignment="center"
        android:textColor="@color/secondary"
        android:textSize="@dimen/_28sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!--Container-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
        android:layout_below="@id/textView">

        <!--Divider-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/text_input_bg"/>
        </RelativeLayout>

        <!--Your Account Row-->
        <RelativeLayout
            android:id="@+id/your_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_5sdp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/account"
                android:layout_centerVertical="true"
                app:tint="@color/yellowcontrast"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_account"
                android:fontFamily="@font/ubuntu_regular"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/secondary"
                android:layout_marginStart="@dimen/_25sdp"/>
        </RelativeLayout>

        <!--Edit Profile Row-->
        <RelativeLayout
            android:id="@+id/edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_40sdp"
            android:padding="@dimen/_5sdp"
            android:layout_below="@+id/your_account">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="edit profile"
                android:fontFamily="@font/ubuntu_regular"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/secondary"
                android:layout_marginStart="@dimen/_25sdp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                app:tint="@color/secondary"/>
        </RelativeLayout>

        <!--Reset Password Row-->
        <RelativeLayout
            android:id="@+id/reset_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_40sdp"
            android:padding="@dimen/_5sdp"
            android:layout_below="@+id/edit_profile">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="reset password"
                android:fontFamily="@font/ubuntu_regular"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/secondary"
                android:layout_marginStart="@dimen/_25sdp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:src="@drawable/arrow_right"
                app:tint="@color/secondary" />
        </RelativeLayout>

        <!--Add Course Row-->
        <RelativeLayout
            android:id="@+id/add_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:layout_below="@+id/reset_pass">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add a course"
                android:fontFamily="@font/ubuntu_regular"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/secondary"
                android:layout_marginStart="@dimen/_25sdp"/>

            <ImageView
                android:id="@+id/openAddCourse"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:src="@drawable/arrow_right"
                app:tint="@color/secondary" />
        </RelativeLayout>

        <!--Notifications Row-->
        <RelativeLayout
            android:id="@+id/notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/add_course">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/notification"
                android:layout_centerVertical="true"
                app:tint="@color/yellowcontrast"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="notifications"
                android:fontFamily="@font/ubuntu_regular"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/secondary"
                android:layout_marginStart="@dimen/_25sdp"/>
        </RelativeLayout>

        <!--Divider-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/add_course">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/text_input_bg"/>
        </RelativeLayout>

        <!--Via phone Row-->
        <RelativeLayout
            android:id="@+id/notify_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_40sdp"
            android:padding="@dimen/_5sdp"
            android:layout_below="@+id/notifications">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="notify via phone"
                android:fontFamily="@font/ubuntu_regular"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/secondary"
                android:layout_marginStart="@dimen/_25sdp"/>
            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </RelativeLayout>

        <!--Via email Row-->
        <RelativeLayout
            android:id="@+id/notify_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_40sdp"
            android:padding="@dimen/_5sdp"
            android:layout_below="@+id/notify_phone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="notify via email"
                android:fontFamily="@font/ubuntu_regular"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/secondary"
                android:layout_marginStart="@dimen/_25sdp"/>
            <Switch
                android:id="@+id/switch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </RelativeLayout>


    </RelativeLayout>

    <!--Logout Button-->
    <Button
        android:id="@+id/logout"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_40sdp"
        android:background="@drawable/text_input_bg"
        android:fontFamily="@font/ubuntu_regular"
        android:text="Logout"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>