<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".mood.GreatActivity">

    <!--Yellow divider-->
    <View
        android:id="@+id/viewSubtitleIndicator"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_6sdp"
        android:layout_above="@id/addTitle"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_12sdp"
        android:background="@drawable/background_subtitle_indicator" />

    <!--Journal Edittext-->
    <EditText
        android:id="@+id/addTitle"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/text_input_bg"
        android:fontFamily="@font/ubuntu_regular"
        android:gravity="top"
        android:hint="@string/askMood"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:minHeight="@dimen/_100sdp"
        android:padding="@dimen/_15sdp"
        android:textColor="@color/white"
        android:textColorHint="@color/secondary"
        android:textSize="@dimen/_14sdp" />

    <!--Save mood button-->
    <Button
        android:id="@+id/greatSaveButton"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@id/addTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@drawable/background_subtitle_indicator"
        android:fontFamily="@font/ubuntu_bold"
        android:text="@string/save" />

    <!--Mood Image-->
    <ImageView
        android:id="@+id/great_icon"
        android:layout_width="147dp"
        android:layout_height="140dp"
        android:layout_above="@+id/addTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_50sdp"
        app:srcCompat="@drawable/ic_great_icon"
        app:tint="@color/secondary" />


    <TextView
        android:id="@+id/dateView"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_above="@+id/viewSubtitleIndicator"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/text_input_bg"
        android:fontFamily="@font/ubuntu_regular"
        android:paddingTop="@dimen/_3sdp"
        android:text="Date"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp" />


