<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="@string/setting"
        android:textAlignment="center"
        android:textColor="@color/secondary"
        android:textSize="@dimen/_28sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
        android:layout_below="@id/textView">

        <RelativeLayout
            android:id="@+id/menu1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:padding="@dimen/_5sdp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/account"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_account"
                android:fontFamily="@font/ubuntu_regular"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_25sdp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_40sdp"
            android:padding="@dimen/_5sdp"
            android:layout_below="@+id/menu1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="edit profile"
                android:fontFamily="@font/ubuntu_regular"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_25sdp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_40sdp"
            android:padding="@dimen/_5sdp"
            android:layout_below="@+id/menu2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="reset password"
                android:fontFamily="@font/ubuntu_regular"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_25sdp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/menu3">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/notification"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="notifications"
                android:fontFamily="@font/ubuntu_regular"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_25sdp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_40sdp"
            android:padding="@dimen/_5sdp"
            android:layout_below="@+id/menu4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="notify via phone"
                android:fontFamily="@font/ubuntu_regular"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_25sdp"/>
            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_40sdp"
            android:padding="@dimen/_5sdp"
            android:layout_below="@+id/menu5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="notify via email"
                android:fontFamily="@font/ubuntu_regular"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_25sdp"/>
            <Switch
                android:id="@+id/switch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </RelativeLayout>


    </RelativeLayout>


    <Button
        android:id="@+id/logout"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_40sdp"
        android:background="@drawable/text_input_bg"
        android:fontFamily="@font/ubuntu_regular"
        android:text="Logout"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>